{
  "name": "chrysalis",
  "version": "0.5.0",
  "license": "GPL-3.0-only",
  "author": {
    "name": "Gergely Nagy",
    "email": "algernon@keyboard.io"
  },
  "homepage": "https://github.com/keyboardio/Chrysalis",
  "scripts": {
    "preinstall": "node tools/preinstall.js",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron-webpack dev",
    "compile": "electron-webpack",
    "build:all": "npm-run-all compile --parallel 'electron-builder -m' 'electron-builder -w' 'electron-builder -l'",
    "build:osx": "yarn compile && electron-builder -m",
    "build:mac": "yarn run build:osx",
    "build:windows": "yarn compile && electron-builder -w",
    "build:win": "yarn run build:windows",
    "build:linux": "yarn compile && electron-builder -l",
    "prettier": "prettier --write \"src/**/*.{js,json,css,scss,md}\"",
    "fix:all": "npm-run-all lint:js lint:css prettier",
    "fix:js": "eslint src/**/*.js --fix",
    "fix:css": "stylelint src/**/*.js src/**/*.css --fix",
    "lint:all": "npm-run-all lint:js lint:css",
    "lint:js": "eslint src/**/*.js",
    "lint:css": "stylelint src/**/*.js src/**/*.css",
    "clean:code": "npm-run-all prettier lint:all",
    "test": "ELECTRON_RUN_AS_NODE=true ./node_modules/.bin/electron ./node_modules/.bin/jest",
    "test:watch": "jest --watchAll"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "yarn fix:js",
        "git add"
      ],
      "*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}": [
        "yarn prettier",
        "git add"
      ],
      "*.{html,css,scss}": [
        "yarn fix:css",
        "git add"
      ]
    },
    "ignore": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "build": {
    "appId": "keyboardio.chrysalis",
    "productName": "Chrysalis",
    "artifactName": "${productName}-${version}.${ext}",
    "copyright": "Copyright Â© 2018, 2019 Keyboardio Inc.; distributed under the GPLv3",
    "mac": {
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@chrysalis-api/colormap": "~0.0.8",
    "@chrysalis-api/focus": "~0.0.9",
    "@chrysalis-api/hardware": "^0.0.8",
    "@chrysalis-api/keymap": "^0.0.19",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.1",
    "@material-ui/lab": "^3.0.0-alpha.30",
    "@reach/router": "^1.2.1",
    "classnames": "^2.2.6",
    "electron-devtools-installer": "^2.2.4",
    "electron-settings": "^3.2.0",
    "electron-window-state": "^5.0.3",
    "notistack": "^0.8.4",
    "prop-types": "^15.7.2",
    "react": "16.8.6",
    "react-color": "^2.17.3",
    "react-dom": "16.8.6",
    "react-localization": "^1.0.13",
    "source-map-support": "^0.5.12",
    "typeface-roboto": "^0.0.54",
    "typeface-source-code-pro": "^0.0.71",
    "usb": "^1.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "electron": "4.1.1",
    "electron-builder": "^20.40.2",
    "electron-webpack": "^2.6.2",
    "electron-webpack-eslint": "^4.0.2",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.3.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-dom": "^3.2.2",
    "lint-staged": "^8.1.7",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.17.1",
    "react-testing-library": "^7.0.0",
    "stylelint": "10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "webpack": "^4.31.0",
    "yarn": "^1.16.0"
  },
  "resolutions": {
    "terser": "3.16.1"
  }
}
